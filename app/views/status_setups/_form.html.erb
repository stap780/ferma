<%= turbo_frame_tag status_setup do %>
    <%= form_with(model: status_setup) do |f| %>

      <%= render "shared/errors", object: status_setup %>
      <div class="row">
        <div class="card">
            <div class="card-body">
              <div class="row hstack gap-2">

                <div class="col-4 row">
                  <%= f.label :retail_status%>
                  <%= f.select :retail_status, StatusSetup.api_retail_order_statuses, {:include_blank => "Select"}, {:class => "form-select"} %>
                </div>
                <div class="col-4 row">
                  <%= f.label :refgo_status%>
                  <%= f.select :refgo_status, StatusSetup::REFGOSTATUS, {:include_blank => "Select"}, {:class => "form-select"} %>
                </div>


                <div class="col d-flex justify-content-end gap-2 align-items-center">
                  <%= f.submit class: "btn btn-primary" %>
                  <%= link_to close_icon, :back, class: "btn btn-outline-primary" %>
                </div>

              </div>            
            </div>
        </div>
      </div>
    <% end %>
<% end %>