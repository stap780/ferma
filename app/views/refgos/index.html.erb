<div class="card my-4 p-3  bg-body rounded shadow-sm">
  <div class="card-header bg-body d-flex">
    <div class="card-info me-auto">
      <h1 class="h3 d-inline align-middle"><%= Refgo.model_name.human(count: 2)%></h1>
    </div>
    <div id= header_actions" class="card-actions d-grid gap-2 d-flex align-items-center justify-content-end">

      <%= link_to arrow_clockwise_icon, refgos_path, class: 'btn btn-outline-primary ' %>
      <%= render partial: "refgos/add_new_button"%>
    </div>
  </div>
  <div class="card-body">
    <div id="datatables-refgos_wrapper">
        <%= turbo_frame_tag Refgo.new %>

        <div class="col-12 list-group list-group-striped">
          <div class="row py-2 px-0 justify-content-between align-items-center text-center">
            <%= tag.div( t( 'helpers.label.refgo.api_link'), class: 'col-4 fw-semibold' )%>
            <%= tag.div( t( 'helpers.label.refgo.api_login'), class: 'col-3 fw-semibold' )%>
            <%= tag.div( t( 'helpers.label.refgo.api_password'), class: 'col-3 fw-semibold' )%>
            <%= tag.div('', class: 'col fw-semibold')%>
          </div>
          <%= turbo_stream_from "refgos" %>
          <%= turbo_frame_tag 'refgos', data: { } do %>
              <%= render @refgos %>
          <% end %>
        </div>

    </div>
  </div>
</div>
