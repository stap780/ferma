<!DOCTYPE html>
<html>
  <head>
    <title>Ferma</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body>
    <% if user_signed_in? %>
    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap px-0 py-2 shadow">
      <%= render 'layouts/navbar' %>
    </header>

    <main class="container-fluid" style="margin-top: 58px;">
      <div class="row">
        <div id="our_flash" class="position-absolute z-1 start-50 translate-middle-x w-50" style="top: 60px;">
          <%= render "shared/flash"%>
        </div>
        <div class="col-md-3">
          <%= render 'layouts/sidebar' %>
        </div>
        <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <%= yield %>
        </div>
      </div>
    </main>
    <%else%>
      <%= yield %>
    <%end%>
  </body>
</html>
