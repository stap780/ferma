<div class="card my-4 p-3  bg-body rounded shadow-sm">
  <div class="card-header bg-body d-flex">
    <div class="card-info me-auto">
      <h1 class="h3 d-inline align-middle"><%= Retail.model_name.human(count: 2)%></h1>
    </div>
    <div class="card-actions d-grid gap-2 d-flex align-items-center justify-content-end">

      <%= link_to arrow_clockwise_icon, retails_path, class: 'btn btn-outline-primary ' %>
        <%= render partial: "retails/add_new_button"%>
    </div>
  </div>

  <div class="card-body">
    <div id="datatables-retails_wrapper">
        <%= turbo_frame_tag Retail.new %>

        <div class="col-12 list-group list-group-striped">
          <div class="row py-2 px-0 justify-content-between align-items-center text-center">
            <%= tag.div( t( 'helpers.label.retail.api_link'), class: 'col-5 fw-semibold' )%>
            <%= tag.div( t( 'helpers.label.retail.api_key'), class: 'col-5 fw-semibold' )%>
            <%= tag.div('', class: 'col fw-semibold')%>
          </div>
          <%= turbo_stream_from "retails" %>
          <%= turbo_frame_tag 'retails', data: { } do %>
              <%= render @retails %>
          <% end %>
        </div>

    </div>
  </div>
</div>
